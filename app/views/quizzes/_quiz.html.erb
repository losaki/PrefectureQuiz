<div class="p-1 md:p-4 w-1/2 md:w-1/3">
  <%= link_to quiz_path(quiz.id) do %>
    <div class="h-full border border-gray-400 border-opacity-60 rounded-lg overflow-hidden shadow-lg">
      <%= image_tag quiz.photo, class: "h-48 md:h-64 w-full object-cover object-center", alt:"photo" %>
      <p class="md:p-2 bg-slate-100">投稿者 <%= quiz.user.name %><p>
      <p class="text-sm md:text-base">プレイ回数:<%= quiz.play_count%> &nbsp;正答率:<%= number_to_percentage(quiz.correct_count.quo(quiz.play_count)*100, precision: 0) unless quiz.play_count == 0 %></p>
    </div>
  <% end %>
</div>
