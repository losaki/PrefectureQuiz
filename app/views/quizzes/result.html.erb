<% content_for(:title, "結果発表！") %>
<div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
  <h1 class="sm:text-3xl text-2xl font-medium title-font mb-8 text-gray-800 py-12">結果</h1>
  <% if params[:answer_prefecture_id].to_i == @quiz.prefecture_id %>
    <p class="answer text-9xl text-red-400">正解！</p>
    <p class="m-4 p-4 bg-gray-200 rounded"><%= @quiz.description %></p>
  <% else %>
    <p class="answer text-9xl text-blue-400">残念！</p>
  <% end %>
  <div class="pt-20 flex px-20">
    <div class="py-2 px-6 text-center">
      <%= link_to "再挑戦", quiz_path(@quiz), class:"text-center py-2 px-8 sm:w-1/2 w-full rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
    </div>
    <div class="py-2 px-6 text-center">
      <%= link_to "一覧へ戻る", quizzes_path, class:"text-center py-2 px-8 sm:w-1/2 w-full rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
    </div>
  </div>
</div>
