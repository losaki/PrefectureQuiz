<div class="flex flex-wrap w-1/2 mt-12 mb-20 flex-col items-center text-center mx-auto">
  <div class="bg-white border-4 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
    <h1 class="text-gray-900 text-xl font-medium title-font mb-12"><%= title %></h1>
    <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
      <%= render 'shared/error_message', object: f.object %>
      <div class="relative mb-3">
        <%= f.label :name, "表示名", class:"leading-7 text-sm text-gray-600" %>
        <%= f.text_field :name, class:"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-3">
        <%= f.label :email, "メールアドレス", class:"leading-7 text-sm text-gray-600" %>
        <%= f.text_field :email, class:"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-3">
        <%= f.label :password, "パスワード", class:"leading-7 text-sm text-gray-600" %>
        <%= f.password_field :password, class:"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-3">
        <%= f.label :password_confirmation, "パスワード(確認)", class:"leading-7 text-sm text-gray-600" %>
        <%= f.password_field :password_confirmation, class:"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-3">
        <%= f.label :role, "権限", class:"leading-7 text-sm text-gray-600" %>
        <%= f.select :role, [0, 1], class:"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <%= f.submit class:"text-white bg-indigo-500 border-0 py-2 px-8 my-4 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
    <% end %>
  </div>
</div>
