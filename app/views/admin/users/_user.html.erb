<tr>
  <td class="px-6 py-4">
    <%= user.id %>
  </td>
  <td class="px-6 py-4">
    <%= user.name %>
  </td>
  <td class="px-6 py-4">
    <%= user.email %>
  </td>
  <td class="px-6 py-4">
    <%= user.role %>
  </td>
  <td class="px-6 py-4">
    <%= l user.created_at, format: :long %>
  </td>
  <td class="px-6 py-4">
    <%= link_to "編集", edit_admin_user_path(user), class: "px-4 py-2 rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
    <%= link_to "削除", admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "px-4 py-2 rounded bg-orange-200 border border-orange-400 hover:bg-orange-100" %>
  </td>
</tr>
