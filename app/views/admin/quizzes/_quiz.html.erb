<tr>
  <td class="px-6 py-4">
    <%= quiz.id %>
  </td>
  <td class="px-6 py-4">
    <%= image_tag(quiz.photo, size: "100x100") %>
  </td>
  <td class="px-6 py-4">
    <%= quiz.user.name %>
  </td>
  <td class="px-6 py-4">
    <%= Prefecture.find(quiz.choices[3].prefecture_id).name %>
  </td>
  <td class="px-6 py-4">
    <%= Prefecture.find(quiz.choices[0].prefecture_id).name %>
  </td>
  <td class="px-6 py-4">
    <%= Prefecture.find(quiz.choices[1].prefecture_id).name %>
  </td>
  <td class="px-6 py-4">
    <%= Prefecture.find(quiz.choices[2].prefecture_id).name %>
  </td>
  <td class="px-6 py-4">
    <%= l quiz.created_at, format: :long %>
  </td>
  <td class="px-6 py-4">
    <%= link_to "編集", edit_admin_quiz_path(quiz), class: "px-4 py-2 rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
    <%= link_to "削除", admin_quiz_path(quiz), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "px-4 py-2 rounded bg-orange-200 border border-orange-400 hover:bg-orange-100" %>
  </td>
</tr>
